#include "ft_putchar.c"
#include "rush02.h"

void	print_body_row_char(int posy, int y)
{
	if (posy == 0 || posy == y - 1)
	{
		ft_putchar('B');
	}
	else
	{
		ft_putchar(' ');
	}
}

void	print_border_row_char(int posy, int y)
{
	if (posy == 0)
	{
		ft_putchar('A');
	}
	else if (posy == y - 1)
	{
		ft_putchar('C');
	}
	else
	{
		ft_putchar('B');
	}
}

void	move_to_next_position(int *posx, int *posy)
{
	*posx = 0;
	*posy = *posy + 1;
	ft_putchar('\n');
}

void	rush(int x, int y)
{
	if (x <= 0 || y <= 0){
		write(1,"Negative numbers and 0 value are not allowed",45);
	}

	int posx = 0;
	int posy = 0;
	while (posy < y)
	{
		if (posx == 0 || posx == x - 1)
		{
			print_border_row_char(posy, y);
		}
		else 
		{
			print_body_row_char(posy, y);
		}
	posx++;
	if (posx == x)
	{
		move_to_next_position(&posx, &posy);
	}
    }
}

